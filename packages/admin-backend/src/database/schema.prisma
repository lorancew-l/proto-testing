generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  email String @unique

  password String

  firstName String

  lastName String

  Token Token?

  Research Research[]

  ResearchGroup ResearchGroup[]
}

model Token {
  id Int @id @default(autoincrement())

  token String @unique

  userId String @unique

  user User @relation(fields: [userId], references: [id])
}

model ResearchGroup {
  id String @id @default(uuid())

  name String

  ownedBy String

  owner User @relation(fields: [ownedBy], references: [id])

  Research Research[]
}

model Research {
  id String @id @default(uuid())

  groupId String?

  name String

  data Json

  publishedData Json

  createdAt DateTime @default(now())

  updatedAt DateTime?

  publishedAt DateTime?

  ownedBy String

  owner User @relation(fields: [ownedBy], references: [id])

  group ResearchGroup? @relation(fields: [groupId], references: [id])
}
